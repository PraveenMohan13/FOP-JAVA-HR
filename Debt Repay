import java.io.*;
import java.util.*;

public class Solution {

    public static void main(String[] args) {
        Scanner z=new Scanner(System.in);
        float p,n,r,si,amt,dis,fin;
        p=z.nextFloat();
        n=z.nextFloat();
        r=z.nextFloat();     
        si=(p*n*r)/100;
        amt=si+p;
        dis=(si*2)/100;
        fin=amt-dis;
    System.out.printf("%.2f\n%.2f\n%.2f\n%.2f",si,amt,dis,fin);

        
    }
}
